{
  "name": "@jujst/oss",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "changeset:release": "changeset publish",
    "changeset:version": "changeset version && esno scripts/csstype.ts && turbo build && git add --all",
    "csstype": "esno scripts/csstype.ts",
    "dev": "turbo dev",
    "format": "biome check . --apply-unsafe --linter-enabled false",
    "lint": "turbo lint",
    "prepare": "husky install",
    "release": "turbo release",
    "test": "turbo test",
    "test:watch": "turbo test:watch"
  },
  "lint-staged": {
    "*": "biome check . --apply-unsafe --linter-enabled false --no-errors-on-unmatched --files-ignore-unknown=true"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.1",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "csstype": "^3.1.3",
    "esno": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "taze": "^0.13.1",
    "tsup": "^8.0.1",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": ">=18"
  }
}
