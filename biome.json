{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noConfusingVoidType": "warn",
				"noShadowRestrictedNames": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"noParameterAssign": "warn"
			},
			"nursery": {
				"useGroupedTypeImport": "error",
				"noUnusedImports": "error",
				"useImportType": "error",
				"useNodejsImportProtocol": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["kebab-case", "snake_case"]
					}
				}
			}
		},
		"ignore": ["./packages/stitches/src/types/css.d.ts"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"lineEnding": "lf",
			"lineWidth": 80,
			"indentStyle": "space",
			"quoteStyle": "single"
		}
	}
}
